<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/TextViewNumberPassword"
        android:layout_width="50dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="45dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/TextViewPasswordSavedInDataBase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewPasswordSavedInDataBase"
        android:layout_width="233dp"
        android:layout_height="105dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TextViewNumberPassword"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewCopyPassword"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewDeletePassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TextViewPasswordSavedInDataBase"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_auto_awesome_motion_24" />

    <ImageView
        android:id="@+id/imageViewDeletePassword"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_delete_24" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toStartOf="@+id/TextViewPasswordSavedInDataBase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewNumberPassword"
        app:srcCompat="@drawable/baseline_arrow_right_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="45dp"
        android:layout_height="26dp"
        android:layout_marginStart="-36dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="61dp"
        android:text="Play"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/TextViewPasswordSavedInDataBase"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/TextViewNumberPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>