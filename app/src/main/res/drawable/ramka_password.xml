<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="8dp"
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:thickness="0dp"
               android:shape="rectangle">
            <stroke android:width="3.5dp"
                    android:color="@color/black"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

    <item
        android:top="-0dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="-0dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:thickness="0dp"
            android:shape="rectangle">
            <solid android:color="@color/fon"/>
            <stroke android:width="3.5dp"
                android:color="@color/black"/>

            <corners
                android:radius="20dp"/>
        </shape>
    </item>

    <item
        android:top="8dp"
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:thickness="0dp"
            android:shape="rectangle">
            <stroke android:width="3.5dp"
                android:color="@color/black"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:thickness="0dp"
            android:shape="rectangle">
            <stroke android:width="3dp"
                android:color="@color/frame"
                android:dashWidth="40dp"
                android:dashGap="40dp"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>
</layer-list>